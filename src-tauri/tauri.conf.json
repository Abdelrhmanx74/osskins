{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Osskins",
  "version": "1.5.3",
  "identifier": "com.osskins.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Osskins",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "resources": ["resources/fonts.zip"]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Abdelrhmanx74/osskins/releases/latest/download/updates.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY4NTAwNzBBRDM3MzY1NzgKUldSNFpYUFRDZ2RRYU5teWE5QnpSa3E3YXZ0b1I3OHhCZkZIZkNoZlQvd2NScjFBekdaeEJvanMK"
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "http": {
      "scope": ["*"]
    },
    "shell": {
      "open": true
    }
  }
}
