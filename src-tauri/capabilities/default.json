{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "fs:default",
    "fs:allow-exists",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:scope",
    {
      "identifier": "fs:scope-app",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    }
  ]
}